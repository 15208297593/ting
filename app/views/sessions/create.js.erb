$('.ui.form').removeClass('loading')
<% if logged_in? %>
  Turbolinks.visit('<%= root_path %>');
<% else %>
  $('.login-form').find('.field').addClass('error')
  $errors = $('#login-errors');
  $errors.addClass('ui error message');
  <% if @inactivation %>
    $errors.html("用户尚未通过验证");
  <% else %>
      $errors.html("邮箱或密码输入不正确");
  <% end %>
    $errors.transition('tada');
<% end %>