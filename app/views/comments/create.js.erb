$('.ui.form').removeClass('loading')
<% if @comment.errors.empty? %>
  if($('.comment').length > 0){
      new_comment = "<%= j render 'comment', comment: @comment %>";
      $('.comments').append(new_comment);
      animated();
  }
  else{
    $('.comments').html("<%= j render 'comment', comment: @comment %>");
    animated();
  }
<% else %>
  $('#comment-errors').html("<%= j render 'shared/error_messages', object: @comment %>");
  $('#error_explanation').addClass('animated shake');
<% end %>

function animated() {
  $('#comment-<%= @comment.id %>').addClass('animated bounceInLeft');
  $('textarea').val("");
}